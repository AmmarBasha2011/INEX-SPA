        CACHE_FOLDER . '/14c4b06b824ec593239362517f538b29.cache'
    ];

    foreach ($fileslist as $file) {
        if (file_exists($file)) {
            unlink($file);
            echo "üóëÔ∏è Deleted file: $file\n";
        } else {
            echo "‚ùå Not found file: $file\n";
        }
    }

    echo "üî• All startup files have been deleted!\n";
    exit(0);
}

if ($command == 'clear:docs') {
    $folderlist = [
        __DIR__ . '/about-me',
        __DIR__ . '/changelog',
        __DIR__ . '/inex-spa',
        __DIR__ . '/.gitbook'
    ];
    $filelist = [
        __DIR__ . '/README (1).md',
        __DIR__ . '/README.md',
        __DIR__ . '/SUMMARY.md',
        __DIR__ . '/LICENSE'
    ];

    // ÿ≠ÿ∞ŸÅ ÿßŸÑŸÖŸÑŸÅÿßÿ™ ÿßŸÑŸÖŸÅÿ±ÿØÿ©
    foreach ($filelist as $file) {
        if (file_exists($file)) {
            if (unlink($file)) {
                echo "üóëÔ∏è Deleted file: $file\n";
            } else {
                echo "‚ùå Failed to delete file: $file\n";
            }
        } else {
            echo "‚ùå File not found: $file\n";
        }
    }

    // ÿØÿßŸÑÿ© ŸÑÿ≠ÿ∞ŸÅ ÿßŸÑŸÖÿ¨ŸÑÿØÿßÿ™ ŸàŸÖÿß ÿ®ÿØÿßÿÆŸÑŸáÿß ŸÖŸáŸÖÿß ŸÉÿßŸÜ ÿßŸÑÿπŸÖŸÇ
    function deleteFolderRecursively($folderPath) {
        if (!is_dir($folderPath)) return;

        $items = scandir($folderPath);
        foreach ($items as $item) {
            if ($item === '.' || $item === '..') continue;
            $path = $folderPath . DIRECTORY_SEPARATOR . $item;

            if (is_dir($path)) {
                deleteFolderRecursively($path); // üîÅ ŸÜÿØÿßÿ° ÿ∞ÿßÿ™Ÿä ŸÑŸÑÿ≠ÿ∞ŸÅ ÿßŸÑÿπŸÖŸäŸÇ
                if (rmdir($path)) {
                    echo "üìÅ Deleted folder: $path\n";
                } else {
                    echo "‚ùå Failed to delete folder: $path\n";
                }
            } else {
                if (unlink($path)) {
                    echo "üóëÔ∏è Deleted file: $path\n";
                } else {
                    echo "‚ùå Failed to delete file: $path\n";
                }
            }
        }
    }

    // ÿ™ŸÜŸÅŸäÿ∞ ÿßŸÑÿ≠ÿ∞ŸÅ ŸÑŸÑŸÖÿ¨ŸÑÿØÿßÿ™ ÿßŸÑÿ±ÿ¶Ÿäÿ≥Ÿäÿ©
    foreach ($folderlist as $folder) {
        if (is_dir($folder)) {
            echo "üîç Cleaning folder: $folder\n";
            deleteFolderRecursively($folder);
            if (rmdir($folder)) {
                echo "‚úÖ Deleted root folder: $folder\n";
            } else {
                echo "‚ùå Failed to delete root folder: $folder (maybe not empty)\n";
            }
        } else {
            echo "‚ùå Not found folder: $folder\n";
        }
    }

    echo "üî• All docs have been deleted!\n";
    exit(0);
}

exit("Unknown command: $command\n");
